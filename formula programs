//To calculate the body mass index calculator

#include<stdio.h>
void main()
{
    float weight,height,BMI;
    printf("enter a value weight:");
    scanf("%f",&weight);
    printf("\nenter a value height:");
    scanf("%f",&height);
    printf("\nBMI is:%2f",weight/(height*height));
}
*******************************************************************************

//To calculate the ohm's law 
#include<stdio.h>
void main()
{
    int I,R,V;
    printf("enter the value of current:");
    scanf("%d",&I);
    printf("\nenter the value of resistence:");
    scanf("%d",&R);
    V=I*R;
    printf("\nvelocity:%d",V);
}
