//To calculate the simple interest
#include<stdio.h>
void main()
{
    int p,n,r;
    printf("enter a value principal:");
    scanf("%d",&p);
    printf("\nenter a value number of years:");
    scanf("%d",&n);
    printf("\nenter a value rate of interest");
    scanf("%d",&r);
    printf("\nsimple interest:%d",(p*n*r)/100);
}
