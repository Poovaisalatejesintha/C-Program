#include<stdio.h>
void main() 
{
    int a;
    printf ("customer age:\n");
    scanf ("%d",&a);
    if(a<18)
    {
        printf ("Discount:20%%");
    }
    else if(18<=a&&a<=60)
    {
        printf ("Discount:10%%");
    }
    else if (a>60)
    {
        printf ("Discount:30%%");
    }
}
