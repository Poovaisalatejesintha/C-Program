#include<stdio.h>
int main()
{
    int x;
    printf("person's age :");
    scanf("%d",&x);
    if(x>=18)
    {
    printf("Eligible to vote");
    }
    else
    {
    printf("not eligible to vote");
    }
    return 0;
    
}
