#include<stdio.h>
void main() 
{
    int a;
     printf ("enter a number:");
     scanf ("%d",&a);
    if(a%5==0&&a%11==0)
    {
        printf("\nthe number is divisible by 5 and 11");
    }
    else
    {
        printf("\nthe number is not divisible by 5 and 11");
    }
}
