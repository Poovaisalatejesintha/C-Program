#include<stdio.h>
void main()
{
    int a;
    printf("enter a number:");
    scanf("%d",&a);
    if(a>0)
    {
        printf("\nThe given number is positive");
    }
    else if(a<0)
    {
        printf("\nThe given number is negative");
    }
    else
    {
        printf("\n The given number is zero");
    }
}
