#include<stdio.h>
void main() 
{
    int a;
    printf ("Enter the temperature:");
    scanf ("%d",&a);
    if(a>30)
    {
        printf ("Hot");
    }
    else if(20<=a&&a>=30)
    {
        printf("Warm");
    }
    else if(a<20)
    {
        printf ("Cold");
    }
}
*****************************************************************************************************
#include<stdio.h>
void main()
{
    int x,y;
    printf("enter a value:");
    scanf("%d%d",&x,&y);
    if(x>=0&y>=0)
    {
        printf("I quadrent");
    }
    else if(x<0&y>=0)
    {
        printf("II quadrent");
    }
    else if(x<0&y<0)
    {
        printf("III quadrent");
    }
    else if(x>=0&y<0)
    {
        printf("IV quadrent");
    }
}
***************************************************************************************

#include<stdio.h>
void main() 
{
    int a,b,c;
    printf ("enter a numbers:");
    scanf ("%d%d%d",&a,&b,&c);
    if(a<c&&b<c)
    {
        printf ("c is greater");
    }
    else if(a<b&&b>c)
    {
        printf("b is greater");
    }
    else if(a>b&&a>c)
    {
        printf ("a is greater");
    }
}
*************************************************************************************************

#include<stdio.h>
void main() 
{
    int a;
    printf ("enter a mark:");
    scanf ("%d",&a);
    if(a>=90)
    {
        printf ("Grade A");
    }
    else if(a>=80&&a<=89)
    {
        printf ("Grade B");
    }
    else if(a>=70&&a<=79)
    {
        printf ("Grade C");
    }
    else if (a>=60&&a<=69)
    {
        printf ("Grade D");
    }
    else 
    {
        printf ("Grade F");
    }
}
